{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es2015",
    "lib": ["es2015", "es2016", "es2017", "es2018", "es2019", "es2020", "DOM"],
    "noImplicitAny": false,
    "strictNullChecks": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "./dist"
  },
  "include": ["src/**/*"],
}